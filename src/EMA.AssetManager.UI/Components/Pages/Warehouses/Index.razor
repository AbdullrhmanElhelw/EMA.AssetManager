@page "/warehouses"
@using EMA.AssetManager.Services.Dtos.Warehouses
@namespace EMA.AssetManager.UI.Pages.Warehouses

<PageTitle>إدارة المخازن - الأكاديمية العسكرية</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">

    <MudPaper Class="page-header mb-4" Elevation="3">
        <div class="d-flex align-center justify-space-between">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.Store" Class="me-3" Size="Size.Large" Color="Color.Inherit" />
                <div>
                    <MudText Typo="Typo.h5" Class="mb-1 font-bold">دليل المخازن</MudText>
                    <MudText Typo="Typo.body2" Style="opacity: 0.9;">إدارة أماكن التخزين وأمناء العهدة</MudText>
                </div>
            </div>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Add" OnClick="NavigateToCreate">
                إضافة مخزن
            </MudButton>
        </div>
    </MudPaper>

    <MudTable Items="@_warehouses"
              Dense="true"
              Hover="true"
              Striped="true"
              Filter="new Func<WarehouseDto, bool>(FilterFunc)"
              Loading="@_isLoading"
              Elevation="4"
              Class="rounded-lg">

        <ToolBarContent>
            <MudText Typo="Typo.h6" Class="me-4">المخازن</MudText>
            <MudSpacer />

            <MudGrid Class="align-center" Spacing="2">

                <MudItem xs="12" sm="3">
                    <MudSelect T="int" Label="الحالة" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true"
                               @bind-Value="_statusFilter">
                        <MudSelectItem Value="0">الكل</MudSelectItem>
                        <MudSelectItem Value="1">نشطة فقط</MudSelectItem>
                        <MudSelectItem Value="2">غير نشطة</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudSelect T="string" Label="تصفية بالأمين" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true"
                               @bind-Value="_selectedKeeperFilter" Clearable="true">
                        <MudSelectItem T="string" Value="null">كل الأمناء</MudSelectItem>
                        @foreach (var keeper in _keepersList)
                        {
                            <MudSelectItem T="string" Value="@keeper">@keeper</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="5">
                    <MudTextField @bind-Value="_searchString"
                                  Placeholder="بحث (اسم، موقع، أمين)..."
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@Icons.Material.Filled.Search" />
                </MudItem>
            </MudGrid>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>#</MudTh>
            <MudTh>اسم المخزن</MudTh>
            <MudTh>الموقع</MudTh>
            <MudTh>أمين المخزن</MudTh>
            <MudTh Class="text-center">الحالة</MudTh>
            <MudTh Class="text-center">الإجراءات</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd>@((_warehouses.IndexOf(context) + 1).ToString("D2"))</MudTd>
            <MudTd>
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.HomeWork" Size="Size.Small" Class="me-2" Color="Color.Secondary" />
                    <MudText Typo="Typo.body2" Class="font-bold">@context.Name</MudText>
                </div>
            </MudTd>
            <MudTd>@context.Location</MudTd>
            <MudTd>
                @if (!string.IsNullOrEmpty(context.KeeperName))
                {
                    <MudChip T="string" Size="Size.Small" Icon="@Icons.Material.Filled.Person" Variant="Variant.Text" Color="Color.Info">@context.KeeperName</MudChip>
                }
                else
                {
                    <MudText Typo="Typo.caption" Color="Color.Secondary">غير محدد</MudText>
                }
            </MudTd>
            <MudTd Class="text-center">
                <MudSwitch T="bool"
                           Value="@context.IsActive"
                           ValueChanged="@((bool val) => ToggleStatus(context, val))"
                           Color="Color.Success"
                           UnCheckedColor="Color.Error"
                           Size="Size.Small" />
            </MudTd>
            <MudTd Class="text-center">
                <MudTooltip Text="تعديل">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Info" Size="Size.Small" OnClick="@(() => NavigateToEdit(context.Id))" />
                </MudTooltip>
                <MudTooltip Text="حذف">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => ShowDeleteDialog(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 10, 20, 50 }" />
        </PagerContent>
    </MudTable>
</MudContainer>