@page "/items"
@using EMA.AssetManager.Services.Dtos.Items
@namespace EMA.AssetManager.UI.Pages.Items

<PageTitle>سجل الأصناف - الأكاديمية العسكرية</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">

    <MudPaper Class="page-header mb-4" Elevation="3">
        <div class="d-flex align-center justify-space-between">
            <div class="d-flex align-center">
                <MudIcon Icon="@Icons.Material.Filled.Inventory" Class="me-3" Size="Size.Large" Color="Color.Inherit" />
                <div>
                    <MudText Typo="Typo.h5" Class="mb-1 font-bold">سجل الأصناف والمهمات</MudText>
                    <MudText Typo="Typo.body2" Style="opacity: 0.9;">قاعدة بيانات الأصناف المعرفة بالنظام</MudText>
                </div>
            </div>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Add" OnClick="NavigateToCreate">
                إضافة صنف جديد
            </MudButton>
        </div>
    </MudPaper>

    <MudTable Items="@_items"
              Dense="true"
              Hover="true"
              Striped="true"
              Filter="new Func<ItemDto, bool>(FilterFunc)"
              Loading="@_isLoading"
              Elevation="4"
              Class="rounded-lg">

        <ToolBarContent>
            <MudText Typo="Typo.h6" Class="me-4">الأصناف</MudText>

            <MudSpacer />

            <MudGrid Class="align-center" Spacing="2">

                <MudItem xs="12" sm="3">
                    <MudSelect T="int" Label="حالة المخزون" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true"
                               @bind-Value="_stockStatusFilter">
                        <MudSelectItem Value="0">الكل</MudSelectItem>
                        <MudSelectItem Value="1">متوفر بالمخازن</MudSelectItem>
                        <MudSelectItem Value="2">نواقص (0)</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="4">
                    <MudSelect T="Guid ?" Label="تصفية بالفئة" Variant="Variant.Outlined" Margin="Margin.Dense" Dense="true"
                               @bind-Value="_selectedCategoryFilter" Clearable="true">
                        <MudSelectItem T="Guid ?" Value="null">كل الفئات</MudSelectItem>
                        @foreach (var cat in _categories)
                        {
                            <MudSelectItem T="Guid ?" Value="@cat.Id">@cat.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" sm="5">
                    <MudTextField @bind-Value="_searchString"
                                  Placeholder="بحث (كود، اسم، فئة)..."
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@Icons.Material.Filled.Search"
                                  IconSize="Size.Medium" />
                </MudItem>
            </MudGrid>

        </ToolBarContent>

        <HeaderContent>
            <MudTh>الكود</MudTh>
            <MudTh>اسم الصنف</MudTh>
            <MudTh>الفئة</MudTh>
            <MudTh>الوحدة</MudTh>
            <MudTh>الكمية الحالية</MudTh>
            <MudTh Class="text-center">الإجراءات</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="الكود">
                <MudChip T="string" Size="Size.Small" Variant="Variant.Text" Color="Color.Primary" Class="font-bold">@context.Code</MudChip>
            </MudTd>
            <MudTd DataLabel="الاسم" Class="font-bold">@context.Name</MudTd>
            <MudTd DataLabel="الفئة">@context.CategoryName</MudTd>
            <MudTd DataLabel="الوحدة">@context.Unit</MudTd>
            <MudTd DataLabel="الكمية">
                <MudBadge Content="@context.Quantity" Color="@(context.Quantity > 0 ? Color.Success : Color.Error)" Overlap="true" Class="mx-2">
                    <MudIcon Icon="@Icons.Material.Filled.Inventory2" Color="Color.Default" />
                </MudBadge>
            </MudTd>
            <MudTd DataLabel="الإجراءات" Class="text-center">
                <MudTooltip Text="تعديل">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Info" Size="Size.Small" OnClick="@(() => NavigateToEdit(context.Id))" />
                </MudTooltip>
                <MudTooltip Text="حذف">
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => ShowDeleteDialog(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
        </PagerContent>
    </MudTable>
</MudContainer>